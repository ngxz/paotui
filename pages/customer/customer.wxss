/* pages/customer/customer.wxss */
page {background-color: #f5f5f5; position: relative; height: 100%;}
.userIcon{width: 100%;height: 400rpx;display: flex;position: relative;}
.imgBorder{height: 200rpx;width: 200rpx;margin: 100rpx auto;border: 10rpx solid #fff;border-radius: 100rpx;overflow: hidden;}
.userIcon image{height: 200rpx;width: 200rpx;}
.userName{text-align: center;position: relative;top:-70rpx;}
/*编辑按钮  */
.editUser{position: absolute;top: 20rpx;right: 20rpx;display: flex;font-size: 30rpx;}
.editUser image{height: 40rpx;width: 40rpx;}
/*功能列表关闭显示  */
.show{display: block;}
.hide{display: none;}
/*功能列表  */
.list{background-color: #fff;margin: 16rpx 30rpx;border-radius:16rpx;}
.tit{padding: 30rpx;border-bottom: solid 1px #f1f1f1;font-size: 32rpx;position: relative;color: #282828;}
.tit image{height: 36rpx;width: 36rpx;position: absolute;right: 20rpx;top: 36rpx;}
/*二级列表  */
.subList{padding: 30rpx;position: relative;}
.subList image{height: 36rpx;width: 36rpx;margin-top: 20rpx;position: absolute;left: 40rpx;top: 20rpx;}
.subList span{margin-left: 70rpx;font-size: 30rpx;color: #2b2b2b;}
/*技术支持  */
.jishu{font-size: 28rpx;text-align: center;color: #999;}