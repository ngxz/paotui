/* pages/introduce/introduce.wxss */
page {background-color: #f5f5f5; position: relative; height: 100%;}
.slide-image{width: 100%;}

.ad-na{display: block; padding: 20rpx; background-color: #fff;position: relative;margin: 0;}
.ad-na .ad{width: 100%;line-height: 60rpx; height: 60rpx;}
.ad-na .ad .address{ float: left;max-width: 85%; overflow: hidden;text-overflow: ellipsis;lex-shrink: 1;white-space: nowrap; font-size: 28rpx; color: #333333; line-height: 60rpx; text-align: left;}
.ad-na .ad image{ width: 50rpx; height: 50rpx; top: 25rpx;right: 40rpx; position: absolute;}
/*---------------------------------------------*/
.navbar{flex: none; display: flex; background: #fff; margin-top: 20rpx;} 
.navbar .item{position: relative; flex: auto; text-align: center; line-height: 90rpx; font-size: 32rpx;width: 50%;} 
.navbar .item.active{color: #009bfc;} 
.navbar .item.active:after{content: ""; display: block; position: absolute; bottom: 0; left: 100rpx; right: 100rpx; height: 6rpx; background: #009bfc;}

.content{font-family: "微软雅黑"; position:relative; background-color: #fff; border-top: 1rpx solid #f4f4f4; height: auto; padding-bottom: 20rpx; overflow: hidden;}

.content-block{position: relative;float: left; height: auto;padding: 0; margin: 0; width: 100%;}
/*-----------------cont-one-----------------------*/
.cont-one{display: block; position: relative; padding: 0 20rpx;}
.cont-one .tittle{line-height: 90rpx;border-bottom: 1px solid #f4f4f4;width: 100%;}
.cont-one .tittle image{width: 40rpx;height: 40rpx;float: left; margin:25rpx 10rpx 0 0; }
.cont-one .tittle text{ font-size: 32rpx;color: #989898; line-height: 90rpx;}

.cont-one .hotel-service{position: relative; display: block; width: 100%;}
.cont-one .hotel-service .col-02{color: #009bfc;}
.cont-one .hotel-service .margin-r{margin:0 0.66%;}

.cont-one .hotel-service .service{padding: 10rpx 0; width: 100%;position: relative;display: block; float: left;}
.cont-one .hotel-service .item{position: relative;display: block; background-color: #f4f9fd;width: 32%; margin-top: 10rpx;line-height: 50rpx; text-align: left; float: left;}
.cont-one .hotel-service .item image{width: 30rpx; height: 30rpx;float: left;margin: 10rpx;}
.cont-one .hotel-service .item text{font-size: 28rpx; float: left; line-height: 50rpx; text-align: left;}

.cont-one .hotel-intro{position: relative; display: block; width: 100%;}
.cont-one .hotel-intro .intro{padding: 20rpx 0;display: block;}
.cont-one .hotel-intro .intro text{ font-size: 28rpx;line-height: 40rpx;text-align: left;}
.cont-one .hotel-intro .intro .tit-top{position: relative; font-weight: bold; text-align: center;font-size: 28rpx; }
/*-----------------cont-two-----------------------*/
.cont-two{display: block; position: relative;}
/*评分  */
.totalScore{text-align: center;color: red;padding: 20rpx 0;}
.totalScore span{font-size: 60rpx;}
.pinglun{text-align: center;color: #999;padding: 6rpx 0;}
/*-----------------一键拨号-----------------------*/
.dial{position:fixed; bottom: 30rpx; right: 30rpx;padding: 20rpx; width: 60rpx; height: 60rpx;border-radius:50%;background: rgba(0,155, 252, 0.8);}
.dial image{width: 100%; height: 100%;}