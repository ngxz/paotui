/* pages/tackyou/tackyou.wxss */
text,view,image{
  margin: 0;
  padding: 0;
}
.header_text{
  display: block;
  width: 90%;
  height: 100rpx;
  color: #01814A;
  margin: 20rpx auto;
  border-bottom: 1rpx solid  #E0E0E0;
}
.banner image{
  width: 90%;
  margin-left: 5%;
  margin-top:30rpx; 
  border: 0 1rpx 0 0 solid black;
  height: 100rpx;
}
.text_content text{
  margin-left: 5%;
  color: #ADADAD;
  display: block;
  width: 100%;
  height: 80rpx;
  font-size: small;
}
.text_content_two{
  width: 90%;
  margin: 0 auto;
  border-bottom: 30rpx solid #E0E0E0;
}
.code_img image{
  width: 90%;
  margin-left: 5%;
  margin-bottom: 18%;
}
.fooder{
  overflow: hidden;
  width: 100%;
  box-shadow: 0px 0px 5px #888888;
  position: fixed;
  bottom: 0;
  /* top: 91%; */
}
.fooder text{
  /* line-height: 120rpx; */
  padding-left: 5%;
  background-color: white;
  width: 45%;
  float: left;
  color: red;
  padding-top:26rpx; 
}
.fooder button{
  /* line-height: 120rpx; */
  width: 50%;
  float: right;
  background-color: #00AEAE;
  border-radius: 0rpx;
  color: white;
}