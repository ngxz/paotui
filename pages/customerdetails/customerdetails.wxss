/* pages/customerdetails/customerdetails.wxss */
page {background-color: #fff; position: relative; height: 100%;}
/*头像  */
.userIcon{width: 100%;height: 400rpx;display: flex;position: relative;}
.imgBorder{height: 200rpx;width: 200rpx;margin: 70rpx auto;border: 10rpx solid #d9d9d9;border-radius: 100rpx;overflow: hidden;}
.userIcon image{height: 200rpx;width: 200rpx;}
/*个人资料表单  */
.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 80rpx;
  align-items: center;
}
.td {
    width:100%;
    padding: 0 30rpx;
    justify-content: center;
    text-align: center;
}
.bg-g{
  background-color: #f5f5f5;
}
/*所填项目名  */
.tit{float: left;font-size: 32rpx;color: #282828;}
.tips{float: right;font-size: 26rpx;color: #999;}
/*所填内容  */
.content .td{float: left;text-align: left;}
.content .td input{text-align: left;float: left;color: #aaa;font-size: 30rpx;}
/*提交按钮  */
.submit{height: 80rpx;width: 80%;color: #fff;background-color:#4a91e3;text-align: center;margin: 40rpx auto;line-height: 80rpx;font-size: 34rpx;}