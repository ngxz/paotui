/* pages/home/home.wxss */
page{position: relative; display: block; font-size: 28rpx; background-color: #ffffff; margin: 0; padding: 0; width: 100%; height: 100%;}
.kf{ position: fixed; right: 20rpx; bottom:66rpx; z-index: 100;}
.kf image{ width: 60rpx; height: 60rpx; background-color: #4a91e3; border-radius: 50%; padding: 20rpx;box-shadow:0 0 10rpx #4a91e3; }
.banner{ line-height: 0; position: relative; display: block; background-color: #f1f1f1;}
.top-img{position: relative; width: 100%; display: block; border: 0;}

.gonggaos{position: relative; display: block; background-color: #f1f1f1; padding:10rpx 20rpx; color: #333;}
.gonggao_01{position: relative;}
.gonggao_01 .swiper_container {height: 60rpx; line-height: 60rpx; width: 100%;}
.gonggao_01 .swiper_item {font-size: 28rpx;overflow: hidden;text-overflow: ellipsis;white-space: nowrap;letter-spacing: 2px;}

.menu-list{position: relative; width: 100%; height: auto; display: block; overflow: hidden;}
.menu-list .menu-item{position: relative; width: 33.33%; height: 232rpx; float: left; overflow: hidden; text-align: center; padding: 20rpx 0;}
.menu-list .menu-item::before, .menu-list .menu-item::after{content: '';display: block;position: absolute;background-color: #f1f1f1;}
.menu-list .menu-item::before{top:0; bottom:0; left: 0; width: 1rpx;transform: scaleY(1);}
.menu-list .menu-item::after{left: 0;right: 0; bottom: 0; height: 1rpx;transform: scaleY(1);}
.menu-item .menu-img{position:absolute; width: 152rpx; height: 152rpx;display: block; border: 0; left: 50%; margin-left: -76rpx;top:30rpx;}
.menu-item .menu-txt{position:absolute; height: 60rpx;line-height: 60rpx; text-align: center; bottom: 10rpx; left: 0; right: 0;}