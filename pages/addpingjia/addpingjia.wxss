/* pages/addpingjia/addpingjia.wxss */
page {background-color: #f5f5f5; position: relative; height: 100%;}
/*标题和店铺按钮  */
.titBox{padding: 34rpx 40rpx;background-color: #fff;overflow: hidden;}
.tit{float: left;font-size: 32rpx;}
.dianping{float: right;font-size: 30rpx;color: #4a91e3;display: flex;}
.dianping image{height: 36rpx;width: 36rpx;}
/*评论列表  */
.contentList{margin-top: 30rpx;padding: 10rpx 20rpx;background-color: #fff;}
/*标题  */
.listTit{overflow: hidden;width: 100%;}
.userIcon{float: left;text-align: center;line-height: 80rpx;}
.addTime{float: right;color: #666;text-align: center;line-height: 80rpx;font-size: 30rpx;}
.userIcon .icon{float: left;border-radius:10rpx;overflow: hidden;width: 80rpx;height: 80rpx;}
.userName{float: left;font-size: 32rpx;color:#4a91e3;margin: 0 14rpx;}
.userScore{float: left;color: red;font-size: 34rpx;}
.userIcon image{height: 80rpx;width: 80rpx;}
/*评论内容  */
.content{padding: 20rpx 46rpx;}
.content text{display: block;word-wrap: break-word;word-break: break-all;font-size: 30rpx;color: #666;text-align: justify;line-height: 40rpx;}
.content image{height: 200rpx;width: 200rpx;margin: 8rpx;}