/* pages/hotel/details/details.wxss */
page {background-color: #f5f5f5; position: relative; height: 100%;}
.slide-image{width: 100%;}

.ad-na{display: block; padding: 20rpx; background-color: #fff;position: relative;margin: 0;}
.ad-na .ad{width: 100%;line-height: 60rpx; height: 60rpx;}
.ad-na .ad .address{ float: left;max-width: 85%; overflow: hidden;text-overflow: ellipsis;lex-shrink: 1;white-space: nowrap; font-size: 28rpx; color: #333333; line-height: 60rpx; text-align: left;}
.ad-na .ad image{ width: 50rpx; height: 50rpx; top: 25rpx;right: 40rpx; position: absolute;}
/*---------------------------------------------*/
.navbar{flex: none; display: flex; background: #fff; margin-top: 20rpx;} 
.navbar .item{position: relative; flex: auto; text-align: center; line-height: 90rpx; font-size: 32rpx;width: 50%;} 
.navbar .item.active{color: #009bfc;} 
.navbar .item.active:after{content: ""; display: block; position: absolute; bottom: 0; left: 100rpx; right: 100rpx; height: 6rpx; background: #009bfc;}

.content{font-family: "微软雅黑"; position:relative; background-color: #fff; border-top: 1rpx solid #f4f4f4; height: auto; padding-bottom: 20rpx; overflow: hidden;}

.content-block{position: relative;float: left; height: auto;padding: 0; margin: 0; width: 100%;}
/*-----------------cont-one-----------------------*/
.cont-one{display: block; position: relative;}
.cont-one .one-top{ width: 100%; height: 140rpx; border-bottom: 1rpx solid #f4f4f4;}
.cont-one .one-top .check{position: relative; width: 50%;float: left;padding: 20rpx 0;}
.cont-one .one-top .text{font-size: 28rpx;color: #989898; text-align: center;line-height: 50rpx;height: 50rpx;}
.cont-one .one-top .time{ color: #009bfc;font-size: 28rpx;width: 100%;text-align: center;line-height: 50rpx;height: 50rpx;}
.cont-one .one-top .line{width: 1px; height: 140rpx; background-color: #f4f4f4; position: absolute; top:0;left: 50%;z-index: 1;}
.cont-one .one-top .leave{position: relative;width: 50%;float:right;padding: 20rpx 0;}
.cont-one .one-top .how-long{display:block;font-size: 28rpx;color: #989898; text-align: center; border: 1px solid #f4f4f4; z-index: 10; border-radius: 25rpx;width: 16%; line-height: 48rpx; position: absolute;left: 42%; top:45rpx;background-color: #fff;}

.cont-one .one-contain{ display: block; position: relative;}
.one-contain .item-list{position: relative; display: block; background-color: #fff;padding: 20rpx;border-bottom: 1rpx solid #f4f4f4;height: 160rpx;overflow: hidden;}
.item-list .item-picture{width: 200rpx; height: 160rpx;display: block;float: left;}
.item-list .item-picture image{width: 100%;height: 100%;}

.item-list .room-type{padding-left: 220rpx; padding-right: 120rpx;}
.item-list .room-type .room{font-size: 32rpx;text-align: left;line-height: 50rpx;overflow: hidden;text-overflow: ellipsis;lex-shrink: 1;white-space: nowrap;}
.item-list .room-type .area{font-size: 24rpx;text-align: left;line-height: 60rpx; color: #989898;}
.item-list .room-type .price{font-size: 32rpx;text-align: right;line-height: 50rpx; color: #f00; margin-right: 10rpx;float: left;}
.item-list .room-type .text{ float: left;color: #989898; font-size: 24rpx;line-height: 40rpx; margin-top: 10rpx;}

.item-list .reserve{width: 100rpx; height: 200rpx;position: absolute; right: 20rpx;top: 0;font-size: 24rpx; text-align: center; line-height: 50rpx;}
.item-list .reserve .advance{background-color: #009bfc;color: #fff;margin-top: 43rpx;border-radius: 10rpx;}
.item-list .reserve .details{border:1px solid #009bfc; color: #009bfc; margin-top: 10rpx;border-radius: 10rpx;}
/*-----------------cont-two-----------------------*/
.cont-two{display: block; position: relative; padding: 0 20rpx;}
.cont-two .tittle{line-height: 90rpx;border-bottom: 1px solid #f4f4f4;width: 100%;}
.cont-two .tittle image{width: 40rpx;height: 40rpx;float: left; margin:25rpx 10rpx 0 0; }
.cont-two .tittle text{ font-size: 32rpx;color: #989898; line-height: 90rpx;}

.cont-two .hotel-service{position: relative; display: block; width: 100%;}
.cont-two .hotel-service .col-01{color: #989898;}
.cont-two .hotel-service .col-02{color: #009bfc;}
.cont-two .hotel-service .margin-r{margin-right: 2%;}

.cont-two .hotel-service .service{padding: 10rpx 0; width: 100%;position: relative;display: block; float: left;}
.cont-two .hotel-service .item{position: relative;display: block; background-color: #f4f9fd;width: 32%; margin-top: 10rpx;line-height: 50rpx; text-align: left; float: left;}
.cont-two .hotel-service .item image{width: 30rpx; height: 30rpx;float: left;margin: 10rpx;}
.cont-two .hotel-service .item text{font-size: 28rpx; float: left; line-height: 50rpx; text-align: left;}

.cont-two .hotel-intro{position: relative; display: block; width: 100%;}
.cont-two .hotel-intro .intro{padding: 20rpx 0;display: block;}
.cont-two .hotel-intro .intro text{ font-size: 28rpx;line-height: 40rpx;text-align: left;}
/*-----------------一键拨号-----------------------*/
.dial{position:fixed; bottom: 30rpx; left: 30rpx;padding: 20rpx; width: 60rpx; height: 60rpx;border-radius:50%;background: rgba(0,155, 252, 0.8);}
.dial image{width: 100%; height: 100%;}